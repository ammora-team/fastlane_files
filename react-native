def react_native_path(skipGlobal = false)
  gpg_cmd = `which react-native`

  unless gpg_cmd.empty?
    return 'react-native'
  end

  Dir.chdir ".." do
    if File.file?('./node_modules/.bin/react-native')
      return './node_modules/.bin/react-native'
    end
  end

  return ''
end

def requirements (options)
  is_install = react_native_path

  if (is_install == '')
    UI.user_error!("'react-native' not installed")
  end
end

platform :android do
  lane :android_archive_override do |options|
    UI.success "Android Archive react-native"

    options[:project_dir] = './android/'

    if (options[:env] != 'staging' && options[:env] != 'prod')
      cmd_react_native = react_native_path(true)
      if (cmd_react_native === '')
        UI.user_error!('Install react-native in project')
      end

      Dir.chdir ".." do
        sh(
          cmd_react_native,
          "bundle",
          "--platform",
          "android",
          "--dev",
          "false",
          "--entry-file",
          "index.js",
          "--bundle-output",
          "android/app/src/main/assets/index.android.bundle",
          "--verbose"
        )
      end
    end

    gradle_archive(options)
  end
end

platform :ios do
  lane :ios_archive_override do |options|
      UI.success "Ios Archive react-native"

      Dir.chdir "../ios" do
        sh("pod", "install")
      end

      xcode_archive(options)
  end
end
